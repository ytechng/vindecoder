<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
      
      <var name="user" class="carfacts.vindecoder.dto.User"/>
                          
      <!-- is the start state -->
      <view-state id="personal" view="flows/register/signup-personal" model="user">
      	<transition on="company" to="company"/>
      </view-state>
      
      <view-state id="company" view="flows/register/signup-company"></view-state>
      
      <view-state id="confirm" view="flows/register/signup-confirm"></view-state>
      
      <!-- end state -->
      <end-state id="home" view="externalRedirect:contextRelative:/"/>
      <view-state id="success" view="flows/register/signup-success"/>
      
      <!-- Global Transaction -->
      <global-transitions>
      	<transition on="home" to="home"/>
      </global-transitions>

</flow>